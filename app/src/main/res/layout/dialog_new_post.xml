<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayoutRecord"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:alpha="80"
    android:background="@color/secondaryColor">


    <CheckBox
        android:id="@+id/checkBoxMakePrivate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/raleway_semibold"
        android:text="@string/switch_private"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressBarRemainingTime"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:max="1000"
        android:progress="700"
        android:progressDrawable="@drawable/circle"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        style="@style/NoAllCapsTextApperance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"

        android:textColorHint="@color/primaryHintColor"
        android:visibility="visible"
        app:hintTextAppearance="@style/HintTextApperance"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBarRemainingTime">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputEditTextTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:alpha="80"
            android:backgroundTint="@color/primaryLightColor"
            android:drawablePadding="@dimen/margin_paddings_tiny"
            android:fontFamily="@font/raleway_semibold"
            android:hint="@string/editTextWasTitle_hint"
            android:singleLine="true"
            android:textColor="@color/primaryTextColor"
            android:textColorHighlight="@color/secondaryColor"
            android:textColorHint="@color/primaryHintColor"
            android:textColorLink="@color/primaryColor"
            android:theme="@style/HintTextApperance" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/progressBarRemainingTime"
        app:layout_constraintStart_toStartOf="@+id/progressBarRemainingTime"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/materialButtonDiscardRecording"
            style="@style/NoAllCapsTextApperance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"

            android:layout_weight="1"
            android:text="@string/discard_recording"
            android:textColor="@color/secondaryTextColor"
            android:textColorHint="@color/primaryHintColor"
            app:backgroundTint="@color/primaryLightColor"
            app:cornerRadius="0dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/materialButtonRetry"
            style="@style/NoAllCapsTextApperance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"

            android:layout_weight="1"
            android:text="@string/retake_recording"
            android:textColor="@color/secondaryTextColor"
            android:textColorHint="@color/primaryHintColor"
            app:backgroundTint="@color/primaryLightColor"
            app:cornerRadius="0dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/materialButtonSend"
            style="@style/NoAllCapsTextApperance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"

            android:layout_weight="1"
            android:text="@string/send_recording"
            android:textColor="@color/secondaryTextColor"
            android:textColorHint="@color/primaryHintColor"
            app:backgroundTint="@color/primaryColor"
            app:cornerRadius="0dp" />
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButtonControlRecording"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:visibility="visible"
        app:backgroundTint="@color/primaryLightColor"
        app:elevation="@dimen/elevation_high"
        app:layout_constraintBottom_toBottomOf="@+id/progressBarRemainingTime"
        app:layout_constraintEnd_toEndOf="@+id/progressBarRemainingTime"
        app:layout_constraintStart_toStartOf="@+id/progressBarRemainingTime"
        app:layout_constraintTop_toTopOf="@+id/progressBarRemainingTime"
        app:srcCompat="@drawable/icon_record" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutUploading"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/imageViewUploading"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.32999998"
            app:srcCompat="@drawable/icon_uploading" />

        <TextView
            android:id="@+id/textViewUploadingOrUploaded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageViewUploading"
            android:layout_alignStart="@+id/imageViewUploading"
            android:layout_alignEnd="@+id/imageViewUploading"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/raleway_semibold"
            android:text="@string/uploading"
            android:textAlignment="center"
            android:textColor="@color/primaryTextColor"
            android:textSize="16sp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="@+id/imageViewUploading"
            app:layout_constraintStart_toStartOf="@+id/imageViewUploading"
            app:layout_constraintTop_toBottomOf="@+id/imageViewUploading" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>